@model List<Actividad4LengProg3.Models.CalificacionViewModel>

@{
    ViewData["Title"] = "Lista de calificaiones Registrados";
    Layout = "/Views/Shared/LayoutCalificaciones.cshtml";
}

<h2>Calificaciones Registradas</h2>
<br />

@if (TempData["Mensaje"] != null)
{
    <div class="alert alert-success">@TempData["Mensaje"]</div>
}


@if (Model != null && Model.Count > 0)
{
    <table class=" table table-primary table-hover table-bordered">
        <thead>
            <tr>
                <th>MatriculaEstudiante</th>
                <th>CodigoMateria</th>
                <th>Nota</th>
                <th>Periodo</th>
                <th>Acción</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var cal in Model)
            {
                <tr>
                    <td>@cal.MatriculaEstudiante</td>
                    <td>@cal.CodigoMateria</td>
                    <td>@cal.Nota</td>
                    <td>@cal.Periodo</td>
                    <td>
                        <a class="btn btn-success m-2" href="/Calificaciones/Editar?id=@cal.Id">Editar</a>
                        <a class="btn btn-danger" href="/Calificaiones/Eliminar?id=@cal.Id">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No hay Materias registradas aún.</p>
}


