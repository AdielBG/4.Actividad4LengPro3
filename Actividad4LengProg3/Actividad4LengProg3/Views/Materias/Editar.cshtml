@model MateriaViewModel;

@{
    ViewBag.Title = "Editar Materia";
    Layout = "/Views/Shared/LayoutMaterias.cshtml";
}

<style>

    form div {
        margin-bottom: 20px;
    }

        form div label {
            font-size: 1.2rem;
        }

</style>


<h2> Editar Materia</h2>
<br />




@if (TempData["Mensaje"] != null)
{
    <div class="alert alert-success">@TempData["Mensaje"]</div>
}

<div class="container mb-3">
    <form class="form-control" action="/Materias/Editar" method="post">
        <input type="hidden" name="Matricula" value="@Model.Codigo" />

        <div>
            <label class="form-label">Código:</label>
            <input class="form-control" type="text" name="Codigo" value="@Model.Codigo" />
        </div>

        

        <div>
            <label class="form-label">Nombre:</label>
            <input class="form-control" type="text" name="Nombre" value="@Model.Nombre" />
        </div>


        <div>
            <label class="form-label">Creditos:</label>
            <input class="form-control" type="number" min="1" max="10" name="Creditos" value="@Model.Creditos" />
        </div>

        <div>
            <label class="form-label" asp-for="Carrera"></label>
            <select class="form-select" asp-for="Carrera" asp-items="@(new SelectList (
                                                                                        new[] { "Ingeniería de Software",
                                                                                                "Contabilidad",
                                                                                                "Enfermería",
                                                                                                "Odontología",
                                                                                                "Derecho" }
                                                                                                                                                                                                                                      ))">
                <option value="">-- Seleccione una carrera --</option>
            </select>
            <span asp-validation-for="Carrera" class="text-danger"></span>
        </div>

        <br /><br />

        <button class="btn btn-success" type="submit">Guardar cambios</button>
        <a class="btn btn-danger" href="/Materias/Lista">Cancelar</a>
    </form>
</div>
